package com.gama.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.gama.model.Carro;
import com.gama.repository.CarroRepository;


@RestController
@RequestMapping("/carros")
public class CarroController {
	@Autowired
	private CarroRepository repository;
	@PostMapping("/")
	private void incluir (@RequestBody Carro carro) {
		repository.save(carro);
	}
	@PutMapping("/")
	private void alterar(@RequestBody Carro carro) {
		repository.save(carro);
	}
	@GetMapping("/{id}")
	private Carro buscar(@PathVariable("id")  Integer id) {
		return repository.findById(id).get();
	}
	@GetMapping("/filtro")
	private Carro buscarPorModelo(@RequestParam("modelo") String modelo) {
		return repository.findByModelo(modelo);
	}
	@GetMapping("/")
	private List<Carro> listarTodos() {
		return repository.findAll();
	}
